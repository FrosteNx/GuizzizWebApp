@model Q.Models.Answer

@{
    ViewData["Title"] = "Delete Answer";
}

<h1>Delete Answer</h1>

<div>
    <h4>Answer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Text
        </dt>
        <dd class="col-sm-10">
            @Model.Text
        </dd>
    </dl>
</div>
<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Details" asp-controller="Question" asp-route-id="@ViewBag.QuestionId" class="btn btn-secondary">Cancel</a>
</form>