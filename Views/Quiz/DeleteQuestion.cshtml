@model Question

@{
    ViewData["Title"] = "Delete Question";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this question?</h3>
<div>
    <h4>Question</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Text
        </dt>
        <dd class="col-sm-10">
            @Model.Text
        </dd>
    </dl>

    <form asp-action="DeleteQuestion">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Details" asp-route-id="@Model.QuizId" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>