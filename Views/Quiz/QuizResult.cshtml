@model Q.Models.QuizResult

@{
    ViewData["Title"] = "Quiz Results";
}

<h1>Quiz Results</h1>
<p>Quiz: @Model.Quiz.Title</p>
<p>Correct Answers: @Model.CorrectAnswers / @Model.TotalQuestions</p>

<table class="table">
    <thead>
        <tr>
            <th>Question</th>
            <th>Your Answer</th>
            <th>Correct</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var userAnswer in Model.UserAnswers)
        {
            <tr>
                <td>@userAnswer.Question.Text</td>
                <td>@userAnswer.Answer.Text</td>
                <td>
                    @if (userAnswer.IsCorrect)
                    {
                        <span class="text-success">Yes</span>
                    }
                    else
                    {
                        <span class="text-danger">No</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<p><a href="@Url.Action("Index", "Quiz")">Back to Quizzes</a></p>