@model Q.Models.Answer

@{
    ViewData["Title"] = "Delete Answer";
}

<h1>Delete Answer</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Answer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Text
        </dt>
        <dd class="col-sm-10">
            @Model.Text
        </dd>
    </dl>

    <form asp-action="DeleteAnswer">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Details" asp-controller="Quiz" asp-route-id="@Model.Question.QuizId">Back to List</a>
        </div>
    </form>
</div>
